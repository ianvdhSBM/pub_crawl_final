<div id="flexbox-container-columns">
  <div id="crawls-container-flex">
    <div class="crawls-new-form-flex">
      <div class="crawls-new-form-header">
        <h2>Create a new hop!</h2>
        <br>
      </div>
      <div class="crawls-new-form">
        <%= form_for(@crawl) do |f| %>
          <div class="form-group">
            <div class="input-group">
              <%= f.text_field :name, class: "form-control", placeholder: "Crawl Name"%>
              <div class="input-group-addon">&nbsp;&nbsp;</div>
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <%= f.text_area :description, class: "form-control", placeholder: "Crawl Description"%>
              <div class="input-group-addon">&nbsp;&nbsp;</div>
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <%= select_tag 'tags[]', options_from_collection_for_select(@tags, "id", "name" ), {multiple: true, class: "tags-select form-control"} %>
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <%= text_field_tag 'bar_names[0]', nil, class: "form-control bar-names", placeholder: "Bar Name", list: "data-list"%>
              <div class="input-group-addon">&nbsp;&nbsp;</div>
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <%= button_tag "Add Bar", id: "add-bar", type: "button", class: "btn btn-default" %>
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <%= f.submit "Submit", class: "btn btn-default" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  <div id="map-flex">
    <div id="map"></div>
  </div>
</div>


