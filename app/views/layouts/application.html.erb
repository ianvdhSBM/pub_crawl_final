<!DOCTYPE html>
<html>
  <head>
    <title>PubCrawlFinal</title>
    <!-- google fonts -->
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Lato:700,900' rel='stylesheet' type='text/css'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- google maps -->
    <script src="http://maps.google.com/maps/api/js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/gmaps.js/0.4.12/gmaps.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render :partial => 'layouts/navbar', :locals => {:user => current_user} %>
   
        <%= yield %>

    <%= render :partial => 'layouts/footer' %>
  </body>
  
  <script>
    window.fbAsyncInit = function() {
      FB.init({
        appId      : '1768705696686469',
        xfbml      : true,
        version    : 'v2.5'
      });
    };

    (function(d, s, id){
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) {return;}
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/sdk.js";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));

    $(document).ready(function() {
      $("#contact").on('click', function() {
        $("#footer").slideToggle("slow");
      })
    })
  </script>

</html>

